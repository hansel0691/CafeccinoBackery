<UserControl x:Class="BackeryApp.SplashScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="80" Width="300">
    <Grid>
        <Rectangle RadiusX="3" RadiusY="3" Stroke="#eee">
            <Rectangle.BitmapEffect>
                <DropShadowBitmapEffect Color="Black" Direction="320"  ShadowDepth="5" Softness="1" Opacity="0.5"/>
            </Rectangle.BitmapEffect>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFBFBFB" Offset="0"/>
                    <GradientStop Color="#FFE0E0E0" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Text="Cargando Base de Datos..." FontSize="15" Foreground="#555" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Grid VerticalAlignment="Center" Margin="10 20 10 0" >
            <Rectangle Height="20" Stroke="#bbb" Fill="#f3f4f5"/>
            <Rectangle Height="18" Width="50" Fill="#FF08B808"/>
        </Grid>
    </Grid>
</UserControl>
